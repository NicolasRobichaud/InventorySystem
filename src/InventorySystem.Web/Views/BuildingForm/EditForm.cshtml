@model InventorySystem.Web.ViewModel.Building.BuildingFormViewModel

<div class="column small-11 small-centered">
    <h1>Add a new building</h1>


    <form asp-anti-forgery="true" asp-action="AddBuildingFormAsync" asp-controller="Building">
        <div asp-validation-summary="ValidationSummary.ModelOnly"></div>

        <input type="hidden" asp-for="Id" />

        <hr />
        <h4 class="subheader">General informations</h4>
        <div class="row">
            <div class="medium-4 column">
                <label asp-for="ItemId">Item Id</label>
                <input type="text" asp-for="ItemId" />
            </div>

            <div class="medium-4 column end">
                <label asp-for="Name">Name</label>
                <input type="text" asp-for="Name" />
            </div>
        </div>

        <div class="row">
            <div class="medium-4 column">
                <label asp-for="BrandId">Brand</label>
                <select asp-for="BrandId" asp-items="Model.Brands"></select>
            </div>

            <div class="medium-4 column end">
                <label asp-for="SerieId">Serie</label>
                <select asp-for="SerieId">
                    <option value="@Guid.NewGuid()">Christmas in the city</option>
                </select>
            </div>
        </div>

        <hr />

        <div class="row">
            <div class="column">
                <label asp-for="Description">Description</label>
                <textarea asp-for="Description" rows="4"></textarea>
            </div>
        </div>

        <hr />
        <h4 class="subheader">Dates</h4>
        <div class="row">
            <div class="medium-4 column">
                <label asp-for="Introduced">Introduced</label>
                <input type="text" class="datepicker" asp-for="Introduced" />
            </div>

            <div class="medium-4 column end">
                <label asp-for="Retired">Retired</label>
                <input type="text" class="datepicker" asp-for="Retired" />
            </div>
        </div>

        <hr />
        <h4 class="subheader">Price</h4>
        <div class="row">
            <div class="medium-4 column">
                <label asp-for="PricePaid">Paid</label>
                <input type="text" asp-for="PricePaid" />
            </div>

            <div class="medium-4 column">
                <label asp-for="PriceCanadianDollar">CAD</label>
                <input type="text" asp-for="PriceCanadianDollar" />
            </div>

            <div class="medium-4 column">
                <label asp-for="PriceUsDollar">USD</label>
                <input type="text" asp-for="PriceUsDollar" />
            </div>
        </div>

        <hr />
        <h4 class="subheader">Specifications</h4>
        <div class="row">
            <div class="column">
                <label asp-for="IncludedParts">Included parts</label>
                <textarea asp-for="IncludedParts" rows="4"></textarea>
            </div>
        </div>

        <hr />
        <h4 class="subheader">Visual</h4>
        <div class="column">
            <label asp-for="ImageUrl">Photo</label>
            <input type="file" asp-for="ImageUrl" />
        </div>

        <hr />
        <h4 class="subheader">Connections</h4>
        <div class="column">
            <label>
                Connections ?
            </label>
        </div>

        <div class="clearfix">
            <input type="submit" class="button right" value="Save" />
        </div>
    </form>
</div>